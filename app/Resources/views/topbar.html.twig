<div id="topbar">
    <div id="btn-menu" class="menu sb-open-left">
        <div>
            <i class="gi gi-angler-fish"></i>
            <span class="hide-mobile"> {{ 'menu'|trans({}, 'menu') }}</span>
        </div>
    </div>
    <div id="btn-top">
        {% if game is defined %}
            <chat-btn></chat-btn>
        {% endif %}
        {% if inGame|default(false) %}
            <inventory-btn></inventory-btn>
            <weapon-btn></weapon-btn>
            <score-btn></score-btn>
        {% endif %}
    </div>
    <div class="title">
        <h1>
            <a href="{{ url('homepage') }}">{{ 'app_name'|trans({}, 'app') }}</a>
        </h1>
    </div>
</div>

{% if is_granted('ROLE_PREVIOUS_ADMIN') %}
    <div class="switch-user">
        Login as <a href="{{ path('user.profil.show', { slug: app.user.slug}) }}">{{ app.user.username }}</a> - <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_user': '_exit'})) }}">Exit</a>
    </div>
{% endif %}

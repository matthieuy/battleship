{% extends "::base.html.twig" %}
{% block title %}Create game - {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="center">{{ 'Create game'|trans({}, 'menu') }}</h1>
    {{ form_start(form, {attr: {class: 'column small-12 large-5 large-centered'}}) }}
        {{ form_rest(form) }}
        <maxplayer trans="{{ 'nb_players'|trans({}, 'form') }}"></maxplayer>
        <div class="center">
            <input type="submit" value="{{ 'Create game'|trans({}, 'menu') }}" class="button success round small-12 large-5">
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% webpack js '@match/js/create.js' %}
        <script src="{{ asset_url }}"></script>
    {% end_webpack %}
    <script src="{{ path('bazinga_jstranslation_js', {domain: 'form'}) }}"></script>
{% endblock %}

#grid {
    width: {{ size }}px;
    height: {{ size }}px;
    {% if isMobile %}
        outline: solid #000 5px;
    {% endif %}
    min-width: {{ size }}px;
    min-height: {{ size }}px;
}
.grid-line {
    width: {{ size }}px;
    min-width: {{ size }}px;
}
.grid .box {
    width: {{ widthBox }}px;
    height: {{ widthBox }}px;
    {% if displayGrid %}
        border-style: solid;
        border-color: rgba(128, 128, 128, 0.3);
        border-width: 0 1px 1px 0;
    {% endif %}
}
.boat { background-image: url('{{ path('match.boat.img', { color: '000000', size: widthBox })|raw }}'); }
.explose { background-image: url('{{ path('match.explose.img', { size: widthBox })|raw }}'); }
.miss { background-position: {{ widthBox * -11 }}px 0; }
.hit { background-position: {{ widthBox * 6 }}px {{ widthBox }}px; }
.rocket {
    position: absolute;
    top: -{{ widthBox }}px;
    left: 20px;
    width: {{ widthBox / 2 }}px;
    height: {{ widthBox }}px;
}

{% for player in game.players %}
    .boat.player{{ player.position }} { background-image: url('{{ path('match.boat.img', { color: player.color, size: widthBox })|raw }}'); }
    #rocket{{ player.position }} { background-image: url('{{ path('match.rocket.img', {color: player.color, size: widthBox })|raw }}'); }
{% endfor %}

@keyframes explose-ice {
    0% { background-position: 0 0; }
    100% { background-position: {{ widthBox * -12 }}px 0; }
}
@keyframes explose-fire {
    0% { background-position: 0 {{ widthBox }}px; }
    100% { background-position: {{ widthBox * 12 }}px {{ widthBox }}px; }
}


{% if isMobile %}
    {% for i in borders %}
        #grid .grid-line:nth-child({{ i }}) .box { border-bottom: 1px solid #F00; }
        #grid .grid-line .box:nth-child({{ i }}) { border-right: 1px solid #F00; }

{% trans_default_domain 'profil' %}
{% extends "::base.html.twig" %}
{% block title %}{% if isMe %}{{ 'Edit profil'|trans }}{% else %}{{ 'Edit profil of %name%'|trans({'%name%': user.username }) }}{% endif %} - {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="center">{% if isMe %}{{ 'Edit profil'|trans }}{% else %}{{ 'Edit profil of %name%'|trans({'%name%': user.username }) }}{% endif %}</h1>

    <div class="row">
    {{ form_start(form) }}
        <fieldset>
            <legend>{{ 'Avatar'|trans({}, 'form') }}</legend>
            <div class="row">
                <div class="column small-2">
                    <img src="{{ path('user.avatar', { id: user.id}) }}" alt="{{ user.username }}" class="avatar60-round" width="60">
                </div>
                <div class="column small-10">
                    {{ form_widget(form.avatar) }}
                    <b>{{ form_errors(form.avatar) }}</b>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>{{ 'Game'|trans({}, 'app') }}</legend>
            <label>
                {{ 'Display grid'|trans({}, 'form') }} : {{ form_widget(form.displayGrid) }}
            </label>
            {{ form_row(form.boxSize) }}
        </fieldset>

        <div class="center">
            {{ form_rest(form) }}
            <input type="submit" value="{{ 'Save'|trans({}, 'form') }}" class="button success">
            <a href="{{ path('user.profil.show', {'slug': user.slug}) }}" class="button">{{ 'Show profil'|trans }}</a>
            <a href="{{ path('user.personal.edit', {'slug': user.slug}) }}" class="button">{{ "Edit connexion's informations"|trans }}</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
